/* pages/department/department.wxss */

.container {
    padding: 0;
    background-color: #fff;
}

.scroll-view-item {
    position: relative;
    margin-left: 28rpx;
    border-bottom: 2rpx solid #eee;
}

.scroll-view-item navigator {
    padding: 30rpx 30rpx 30rpx 0;
}

.scroll-view-item .dept-name {
    font-size: 48rpx;
    color: #333;
}

.scroll-view-item .dept-count {
    float: right;
    color: #999;
    margin-top: 12rpx;
    margin-right: 30rpx;
    font-size: 36rpx;
}

.scroll-view-item .arrow {
    position: absolute;
    top: 50rpx;
    right: 20rpx;
    width: 36rpx;
    height: 36rpx;
}
.login-container .app-title {
    display: block;
    text-align: center;
    font-size: 64rpx;
    line-height: 72rpx;
    margin-bottom: 80rpx;
}

.login-container .section input {
    margin: 0 auto 40rpx;
    padding: 0 28rpx;
    width: 80%;
    height: 72rpx;
    line-height: 68rpx;
    border: 2rpx solid #ccc;
    border-radius: 40rpx;
    box-sizing: border-box;
}

.login-container .section button {
    width: 80%;
    height: 72rpx;
    padding: 0;
    margin: 10rpx auto 0;
    font-size: 36rpx;
    color: #fff;
    line-height: 68rpx;
    box-sizing: border-box;
    border: none;
    border-radius: 40rpx;
    background: #2d8cf0;
    cursor: pointer;
}
.login-form {
    position: relative;
    display:block;
    padding-bottom: 20px;
}
.error {
    position: absolute;
    left: 10%;
    display: block;
    padding-left: 28rpx;
    color: red;
    height: 28rpx;
    font-size: 28rpx;
    line-height: 1;
    margin-top: -20rpx;
}

/* pages/upload/upload.wxss */
.img{
    display: inline-block;
}

.pic {
    float:left;
    position:relative;
    margin-right:9px;
    margin-bottom:9px;
}

.delete-btn{
    position: absolute;
    top: 0;
    right: 0;
}

.weui-uploader{
    padding: 10rpx;
}